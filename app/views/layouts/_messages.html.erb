<div class = "container">
<% if flash.any? %>
  <% flash.each do |name, message| %>
      <div class="alert alert-<%= name == "notice" ? "success" : "danger" %> alert-dismissible fade show w-100" role="alert">
          <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
  <% end %>
<% end %>
</div>