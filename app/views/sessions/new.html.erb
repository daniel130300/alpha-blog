<div class="container">
    <h2 class="text-center text-white my-4">Log In</h2>
    <div class="card text-white text-center bg-dark mb-4">
        <div class="card-body d-flex flex-column ">
            <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
            <div class="row align-items-center mb-3 mx-0 px-0">
                <div class="col-4">
                    <%= f.label :email, 'Email: ', class: "form-label text-white fs-6" %>
                </div>

                <div class="col-8">
                    <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
                </div>
            </div>
            <div class="row align-items-center mb-3 mx-0 px-0">
                <div class="col-4">
                    <%= f.label :password_digest, "Password: ", class: "form-label text-white fs-6" %>
                </div>

                <div class="col-8">
                    <%= f.password_field :password_digest, class: "form-control", placeholder: "Enter your password"%>
                </div>
            </div>
            <%= f.submit "Log In", class: "btn btn-primary"%>
            <% end %>
        </div>
    </div>
</div>