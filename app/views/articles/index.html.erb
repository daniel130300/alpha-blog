<div class="container">
    <h1 class="my-3 text-center text-white">Articles List</h1>
    <% if logged_in? %>
        <div class="text-center">
            <%= button_to 'Create new article', new_article_path, method: :get, class: "btn btn-primary text-white mb-4"%>
        </div> 
    <% end %> 
    
    <% if will_paginate @articles%>
        <div class="flickr_pagination mt-1 mb-4">
            <%= will_paginate @articles, :container => false %>
        </div>
    <% end %>

    <%= render 'article' %>

    <% if will_paginate @articles%>
        <div class="flickr_pagination mb-4">
            <%= will_paginate @articles, :container => false %>
        </div>
    <% end %>

</div>
