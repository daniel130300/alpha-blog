<div class="container">
    <h1 class="text-center text-white mb-4">Article Details</h1>
    <div class="card text-white text-center bg-dark mb-4">
        <div class="card-header fst-italic">
            <% if @article.user %>
                <%= link_to "Created by: #{@article.user.username}", user_path(@article.user), class: "text-white text-center text-decoration-none"%>
                <div class="my-1">
                    <%= link_to gravatar_for(@article.user), user_path(@article.user)%>
                </div> 
            <% end %>
        </div>
        <div class="card-body">
            <h5 class="card-title"><%= @article.title %></h5>
            <p class="card-text"><%= @article.description %></p>
            <% if logged_in? && @article.user == current_user %>
                <div class="d-flex justify-content-center align-items-center">
                    <%= button_to 'Update', edit_article_path(@article.id), method: :get, class: "btn btn-outline-warning mx-2" %>
                    <%= button_to 'Delete', article_path(@article.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger mx-2" %>
                </div>
            <% end %>
        </div>
        <div class="card-footer text-muted fst-italic">
            created <%= time_ago_in_words(@article.created_at) %> ago, edited <%= time_ago_in_words(@article.updated_at) %> ago
        </div>
    </div>

    <div class="text-center">
    <%= button_to 'Return to article listings', articles_path, method: :get, class: "btn btn-outline-light"%>
    </div>
</div>


